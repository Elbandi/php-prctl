#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

# see EXAMPLES in dpkg-buildflags(1) and read /usr/share/dpkg/*
DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

# see FEATURE AREAS in dpkg-buildflags(1)
export DEB_BUILD_MAINT_OPTIONS = hardening=+all

# see ENVIRONMENT in dpkg-buildflags(1)
# package maintainers to append CFLAGS
export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
# package maintainers to append LDFLAGS
export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed

# Don't ever use RPATH on Debian
export PHP_RPATH=no

PECL_NAME    := $(if $(PECL_NAME_OVERRIDE),$(PECL_NAME_OVERRIDE),$(subst php-,,$(DEB_SOURCE)))
INSTALL_ROOT = $(CURDIR)/debian/php-$(PECL_NAME)

%:
	dh $@ --parallel --with php5

override_dh_auto_configure:
	phpize5
	dh_auto_configure -- --enable-$(PECL_NAME)

override_dh_auto_test:
	dh_auto_test -- REPORT_EXIT_STATUS=1 NO_INTERACTION=y

override_dh_auto_install:
	dh_auto_install -- INSTALL_ROOT=$(INSTALL_ROOT)

override_dh_clean:
	phpize5 --clean
	dh_clean
